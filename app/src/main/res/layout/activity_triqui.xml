<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Triqui">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/textViewPuntaje"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_rounded_border"
            android:fontFamily="@font/start"
            android:gravity="center"
            android:text="score"
            android:textColor="#EF6136"
            android:textSize="45dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.514">

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewJu1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/start"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewJu2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/start"
                android:gravity="center"
                android:textColor="#FFF"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPuntaje1"
                android:layout_width="128dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/start"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/textViewPuntaje2"
                android:layout_width="119dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/start"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/txtJugador1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="2sp"
            android:background="#000000"
            android:fontFamily="@font/start"
            android:padding="32dp"
            android:textColor="#EF6136"
            android:textSize="15dp">

        </Button>

    </GridLayout>

    <TextView
        android:id="@+id/txtJugador1"
        android:layout_width="290dp"
        android:layout_height="87dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:fontFamily="@font/start"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtJugador1">

        <Button
            android:id="@+id/btnReiniciar"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:background="@drawable/button_rounded_border_game"
            android:fontFamily="@font/vt"
            android:gravity="center"
            android:text="Reiniciar"
            android:textColor="#000000"
            android:textSize="30dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/btnMenu2"
            android:layout_width="100dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@drawable/button_rounded_border_game"
            android:fontFamily="@font/vt"
            android:gravity="center"
            android:text="MenÃº"
            android:textColor="#000000"
            android:textSize="30dp" />

