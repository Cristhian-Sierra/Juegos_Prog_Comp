<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewJuegos"
        android:layout_width="281dp"
        android:layout_height="84dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/start"
        android:gravity="center"
        android:text="JUEGOS UD"
        android:textColor="#EF6136"
        android:textSize="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="186dp"
        android:layout_height="149dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewJuegos"
        app:srcCompat="@drawable/gamepad" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:text="JUGADOR 1:"
        android:textSize="20dp"
        app:fontFamily="@font/start"
        app:layout_constraintBottom_toTopOf="@+id/txt_name1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        tools:textColor="#EF6136" />

    <EditText
        android:id="@+id/txt_name1"
        style="@android:style/Widget.EditText"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#EF6136"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#EF6136"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="JUGADOR  2:"
        android:textSize="20dp"
        app:fontFamily="@font/start"
        app:layout_constraintBottom_toTopOf="@+id/txt_name2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name1"
        tools:textColor="#EF6136" />

    <EditText
        android:id="@+id/txt_name2"
        style="@android:style/Widget.EditText"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#EF6136"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:textColor="#EF6136"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_begin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/btn_begin"
        style="@android:style/Widget.Button"
        android:layout_width="147dp"
        android:layout_height="45dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_rounded"
        android:text="EMPEZAR"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="16dp"
        app:fontFamily="@font/start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_name2" />

</androidx.constraintlayout.widget.ConstraintLayout>